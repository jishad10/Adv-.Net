
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_OuterLayout.cshtml";
}

<h2>Login</h2>

@if (ViewBag.Msg != null)
{
    <div class="alert alert-danger">@ViewBag.Msg</div>
}

@Html.ValidationSummary()

<form action="" method="post">
    <input type="text" class="form-control" name="Uname" value="@Model.Uname" placeholder="Username" />
    <span class="text-danger">@Html.ValidationMessage("Uname")</span>
    <input type="password" class="form-control" name="Pass" value="@Model.Pass" placeholder="Password" /><br />
    <span class="text-danger">@Html.ValidationMessage("Pass")</span>
    <input type="submit" class="btn btn-success" value="Login" />
</form>