@model LabExam.DTOs.LoginDTO

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_OuterLayout.cshtml";
}

<div class="d-flex justify-content-center">
    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "w-50" }))
    {
        <div class="mb-3">
            @Html.LabelFor(m => m.Uname)
            @Html.TextBoxFor(m => m.Uname, new { @class = "form-control", })
            @Html.ValidationMessageFor(m => m.Uname, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control",  })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <input type="submit" name="submit" class="btn btn-success w-100" value="Login" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

