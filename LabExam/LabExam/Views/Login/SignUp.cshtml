@model LabExam.DTOs.RegisterDTO

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_OuterLayout.cshtml";
}

<div class="d-flex flex-column align-items-center">
    @using (Html.BeginForm("SignUp", "Login", FormMethod.Post, new { @class = "w-50" }))
    {
        <div class="mb-3">
            @Html.LabelFor(m => m.Uname)
            @Html.TextBoxFor(m => m.Uname, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Uname, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Gender)
            <div>
                @Html.RadioButtonFor(m => m.Gender, "Male") Male
                @Html.RadioButtonFor(m => m.Gender, "Female", new { @class = "ms-2" }) Female
            </div>
            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Address)
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Type)
            @Html.DropDownListFor(m => m.Type, new SelectList(new[] { "Admin", "Customer" }, new { @class = "form-control" }))
            @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
        </div>

        <input type="submit" name="submit" class="btn btn-success mt-3" value="Register" />
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
